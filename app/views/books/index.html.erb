<h1>Books</h1>
<table>
 <tr>
   <th>Title</th>
   <th>Body</th>
   <th colspan="3"></th>
 </tr>
 <% @books.each do |book| %>
 <tr>
   <td>
     <%= book.title %>
   </td>
   <td>
     <%= book.body %>
   </td>
   <td>
     <span>
         <%= link_to "Show", "/books/#{book.id}" %>
     </span>
   </td>
   <td>
     <span>
         <%= link_to "Edit", edit_book_path(book.id) %>
     </span>
   </td>
   <td>
     <span>
         <%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %>
     </span>
   </td>
 </tr>
 <% end %>
</table>


<h1>New Book</h1>
<% if @book.errors.any? %>
    <%= @book.errors.count %>errors
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
 <% end %>

<%= form_with model:@book, url:'/books', local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <input type="submit" name="commit" value="Create Book" data-disable-with="Create Book">


<% end %>
